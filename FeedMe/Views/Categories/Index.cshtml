@model IEnumerable<ourProject.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<style>
    #categoryBtn {
        margin: auto;
        background-color: rgba(128, 128, 128, 0);
        border: gray;
        border-style: double;
        align-items: center;
        border-radius: 25px;
        
    }
</style>

<p>
    <a asp-action="Create">Create New Category</a>
</p>


<div class="container">
    <div class="row">

        @foreach (var category in Model)
        {

            <button id="categoryBtn" style="width: 18rem; height: 18rem;">
                <div class="card text-center" style="background-color: rgba(128, 128, 128, 0);">
                    <img src="@category.CategoryImage" class="itemCard" width="100%" height="100%" style="border-radius:10px;">
                    @if (category.CategoryImage == null)
                    {
                        <img src="~/Photos/notFind.png" class="itemCard" width="80%" height="80%" style="margin-left:auto; margin-right:auto;">
                    }
                    <div class="card-body">
                        <h5 class="text-center">@category.Name</h5>
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@category.ID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@category.ID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@category.ID">Delete</a>
                            </td>
                        </tr>

                    </div>
                </div>
            </button>
        }
    </div>
</div>