@{
    ViewData["Title"] = "Home Page";
    Layout = "_homeLayout";
}

<div class="container">
    <div class="row">

        <div class="col-md-2"></div>

        <div class="text-center col-md-8">
            <div style="color: white; font-size: 100px; font-family: 'Lobster', cursive;">
                Welcome to FeedMe!
            </div>
            <div class="form-group has-search" style="margin-top: 125px;">
                <span class="fa fa-search form-control-feedback"><ion-icon name="search-outline"></ion-icon></span>
                <input type="text" class="form-control" placeholder="Where to send the food ?!">
            </div>
        </div>


        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Photos/Cocktails/12.jpg" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Photos/Hamburger/--/13.jpg" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Photos/Pizza/1.jpg" class="d-block w-100">
                </div>
            </div>
        </div>

        <div class="col-md-2"></div>

    </div>
</div>