@{
    ViewData["Title"] = "Home Page";
    Layout = "_homeLayout";
}

<div class="container">
    <div class="row">
        <marquee behavior="slide" direction="left" BGCOLOR=#e0e0eb scrollamount="10">
            <li>
                <span>09/06/2021 - Ruben Restaurant has joined our site! </span>
            </li>
            <li>
                <span>09/06/2021 - Weekend Coupon- #OnlyFeedMe</span>
            </li>
            <li>
                <span>Ordering for the first time? Get a 10% discount from us.</span>
            </li>
        </marquee>

        <div class="col-md-2"></div>

        <div class="text-center col-md-8">
            <div class="homeTitle">
                Welcome to FeedMe!
            </div>
            <form asp-controller="Restaurants" asp-action="Index" method="get">
                <div class="form-group has-search searchbarStyle">
                    <span class="fa fa-search form-control-feedback"><ion-icon name="search-outline"></ion-icon></span>
                    <input type="text" class="form-control" placeholder="What would you like to eat today?" name="SearchString" />
                </div>
            </form>
           

                <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                 
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="10000">
                            <img style="background-image: url(../Photos/CoffeeShops/Roladin/5.jpg); background-size: cover;" src="/Photos/CoffeeShops/Roladin/16.jpg" class="d-block w-100">

                            <div class="carousel-caption d-none d-md-block">
                                <button id="sliderBtn" type="button" class="btn btn-outline-light" onclick="window.location.href = 'https://localhost:44376/Restaurants/Details/9';">
                                    <h3>Roladin</h3>
                                </button>
                            </div>
                        </div>
                        <div class="carousel-item" data-bs-interval="2000">
                            <img style="background-image: url(../Photos/Pizza/12.jpg); background-size: cover;" class="d-block w-100">
                            <div class="carousel-caption d-none d-md-block" onclick="window.location.href = 'https://localhost:44376/Restaurants/Details/20';">

                                <button class="sliderUpperMiddle btn" id="sliderBtn" type="button">
                                    <h3>Pizza Siciliana</h3>
                                </button>

                            </div>
                        </div>
                        <div class="carousel-item">
                            <img style="background-image: url(https://www.bishulim.co.il/sites/default/files/media/images/recipe/field_rp_main_image/Hamburgeraz1.jpg);" class="d-block w-100">
                            <div class="carousel-caption d-none d-md-block" onclick="window.location.href = 'https://localhost:44376/Restaurants/Details/15';">
                                <button class="sliderUpperMiddle btn" id="sliderBtn" type="button">
                                    <h3>Burgers Bar</h3>
                                </button>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img style="background-image: url(https://www.landwercafe.co.il/wp-content/uploads/2020/01/%D7%A9%D7%A7%D7%A9%D7%95%D7%A7%D7%94-%D7%A7%D7%9C%D7%90%D7%A1%D7%99%D7%AA-2.jpg); background-size:1000px 650px;" class="d-block w-100">
                            <div class="carousel-caption d-none d-md-block">
                                <button class="sliderUpperRight btn" id="sliderBtn" type="button">
                                    <h3>Landwer</h3>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

    </div>
</div>