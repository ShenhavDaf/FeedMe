@model ourProject.Models.CartItem

@{
    ViewData["Title"] = "Details of cart item";
}

<h1>Details</h1>


<div id="dishBody">
    <div class="container">
        <div class="row">
                <div class="container">
                    <hr />
                    <div class="row">
                        <div class="col">
                            <img src="@Model.Dish.DishImage">
                        </div>
                        <div class="col-6" tabindex="0">

                            <h4 class="text-center">@Model.Dish.Name</h4>
                            <p class="text-center"> @Model.Dish.Description</p>
                            <p class="text-center"> @Model.Dish.Price₪</p>
                        </div>
                        <div class="col ">

                            <tr>
                                <td>
                                    <div class="def-number-input number-input safari_only mb-0 w-100">
                                        <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                class="minus">
                                            -
                                        </button>
                                        <input class="quantity" min="0" name="quantity" value="1" type="number">
                                        <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                class="plus">
                                            +
                                        </button>
                                    </div>

                                    <button type="button" id="dishesBtn" class="btn btn-outline-info"> <a asp-controller="Carts" asp-action="Index" asp-route-id="@Model.Dish.ID" dish-id="@Model.Dish.ID">Check</a> </button>

                                    <a asp-action="Edit" asp-route-id="@Model.Dish.ID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@Model.Dish.ID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@Model.Dish.ID">Delete</a>
                                </td>
                            </tr>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>



