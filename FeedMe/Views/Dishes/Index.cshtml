@model IEnumerable<ourProject.Models.Dish>

@{
    ViewData["Title"] = "Dish Homepage";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div id="dishBody">
    <div class="container">
        <div class="row">

            @foreach (var dish in Model)
            {
                <div class="container">
                    <hr />
                    <div class="row">
                        <div class="col">
                            <img src="@dish.DishImage">
                        </div>
                        <div class="col-6" tabindex="0">

                            <h4 class="text-center">@dish.Name</h4>
                            <p class="text-center"> @dish.Description</p>
                            <p class="text-center"> @dish.Price₪</p>
                        </div>
                        <div class="col ">

                            <p>
