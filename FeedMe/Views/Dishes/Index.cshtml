@model IEnumerable<ourProject.Models.Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div id="restaurantBody">
    <div class="container">
        <div class="row">

            @foreach (var dish in Model)
            {
            <div class="container">
                <hr />
                <div class="row" >
                    <div class="col">
                        <img src="@dish.DishImage" width="80%" height="80%" style="border-radius:10px; margin-left:auto; margin-right:auto; max-width:auto">
                    </div>
                    <div class="col-6" tabindex="0">

                        <h4 class="text-center">@dish.Name</h4>
                        <p class="text-center" style="margin-top:auto"> @dish.Description</p>
                        <p class="text-center" style="margin-top:auto"> @dish.Price₪</p>
                    </div>
                    <div class="col ">
                        <p>
                            <button type="button" id="dishesBtn" class="btn btn-outline-info"> Add to order </button>
                        </p>
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@dish.ID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@dish.ID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@dish.ID">Delete</a>
                            </td>
                        </tr>
                    </div>
                </div>
            </div>


            }

          

        </div>
    </div>
</div>




