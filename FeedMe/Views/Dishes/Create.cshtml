@model FeedMe.Models.Dish


<head>
    @{
        ViewData["Title"] = "Create a new dish";
    }
    <link rel="stylesheet" href="~/css/dish.css" />

</head>


<h1>Create</h1>

<h4>Dish</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DishImage" class="control-label"></label>
                <input asp-for="DishImage" class="form-control" />
                <span asp-validation-for="DishImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodType" class="control-label"></label>@*ה@ שלמטה מוסיף את 3 סוגי המנות-בשרי/חלבי/טבעוני לרשימה*@
                <select asp-for="@Model.FoodType" asp-items="ViewBag.FoodType" class="form-control"></select>
                <span asp-validation-for="FoodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="RestaurantID" class="control-label"></label>-->
            @*ה@ שלמטה מוסיף את כל המסעדות שהמנה מוגשת בהן*@
            @*<input asp-for="RestaurantID" class="form-control" asp-items="@ViewBag.RestaurantID" readonly>
                <input asp-for="RestaurantID" class="form-control" asp-items="@ViewData["RestaurantName"]" readonly>*@
            <!--<input asp-for="RestaurantID" class="form-control" value="@ViewData["RestaurantID"]" readonly>
            </div>-->
            <div class="form-group">
                <label asp-for="RestaurantID" class="control-label"></label>@*ה@ שלמטה מוסיף את כל המסעדות שהמנה מוגשת בהן*@
                <select asp-for="RestaurantID" class="form-control" asp-items="@ViewBag.RestaurantID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
