@model FeedMe.Models.MyCart


<head>
    @{
        ViewData["Title"] = "Delete";
    }

    <link rel="stylesheet" href="~/css/myCart.css" />

</head>


<h1>Delete</h1>

<h3>Are you sure you want to delete this cart?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
