@{
    ViewData["Title"] = "Pay";
}

    
<h1>Pay</h1>
<head>
    <link rel='stylesheet' href='~/css/Pay.css' type='text/css'>
    <!-- <script src='main.js'></script> -->
@*    <script type="text/javascript" src="~/js/Pay.js"></script>
*@
</head>
<body>

    <div class="row">
        <div class="col-40">
            <div class="container-1">
                <form name="payForm" class="text">
                    <div class="row">
                        <div class="col-25">
                            <h3>Billing Address</h3>
                            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                            <input type="text" id="fname" name="firstname" placeholder="Your full name" pattern="^[A-Z][-a-zA-Z]+$" title="Please start with a capital letter" required>
                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input type="email" id="email" name="email" placeholder="Yourname@example.com" pattern="/^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/" required>
                            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                            <input type="text" id="adr" name="address" placeholder="Your address" pattern="^[A-Z][-a-zA-Z]+$" title="Please start with a capital letter" required>
                            <label for="city"><i class="fa fa-institution"></i> City</label>
                            <input type="text" id="city" name="city" placeholder="Your city" pattern="^[A-Z][-a-zA-Z]+$" title="Please start with a capital letter" required>
                        </div>

                        <div class="col-25">
                            <h3>Payment</h3>
                            <label for="cname">Name on Card(VISA...)</label>
                            <input type="text" id="cname" placeholder="Name" title="Please start with a capital letter">
                            <label for="ccnum">Credit card number</label>
                            <input type="text" id="ccnum" name="cardnumber" pattern="^[1-9]{1}(?:[0-9]{15})?$" placeholder="1111-2222-3333-4444" title="Please enter 16 numbers" required>

                            <label for="expmonth">Exp Month</label>
                            <input type="text" id="expmonth" name="expmonth" placeholder="September" pattern="^(0?[1-9]|1[012])$" title="Please enter 2 numbers" required>

                            <div class="row">
                                <div class="col-25">
                                    <label for="expyear">Exp Year</label>
                                    <input type="text" id="expyear" name="expyear" placeholder="2024" pattern="^\d{4}$" title="Please enter 4 numbers" required >
                                </div>
                                <div class="col-25">
                                    <label for="cvv">CVV</label>
                                    <input type="text" id="cvv" name="cvv" placeholder="352"  pattern="^[0-9]{3}$" title="Please enter 3 numbers" required>
                                </div>
                            </div>
                        </div>

                    </div>
                    @*<button type="button" class="btn" onclick="cardnumber1(document.payForm.cardnumber)">*@

                    @*<a asp-action="Delivery"> Continue to checkout</a>*@
                    <input type="submit" class="btn" asp-action="Delivery" value="Continue to checkout">
                    @* </button>*@
                </form>
            </div>
        </div>
    </div>
   @* <script type="text/javascript" src="~/js/Pay.js"></script>*@

</body>




