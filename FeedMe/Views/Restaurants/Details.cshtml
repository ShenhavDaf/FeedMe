@model ourProject.Models.Restaurant

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <div class="row">

        @foreach (var dish in Model.Dishes)
        {
            <button id="categoryBtn">
                <div class="card text-center">
                    <a asp-controller="Dishes" asp-action="Index" asp-route-id="@dish.ID">
                        <img src="@dish.DishImage" class="itemCard" width="100%" height="100%" style="border-radius:10px;">
                        @if (dish.DishImage == null)
                        {
                            <img src="~/Photos/notFind.png" class="itemCard" width="80%" height="80%" style="margin-left:auto; margin-right:auto;">
                        }
                    </a>
                    <div class="card-body">
                        <h5 class="text-center">@dish.Name</h5>
                        <tr>
                            <td>
                                <a asp-controller="Dishes" asp-action="Edit" asp-route-id="@dish.ID">Edit</a> |
                                <a asp-controller="Dishes" asp-action="Details" asp-route-id="@dish.ID">Details</a> |
                                <a asp-controller="Dishes" asp-action="Delete" asp-route-id="@dish.ID">Delete</a>
                            </td>
                        </tr>

                    </div>
                </div>

            </button>
        }
    </div>
</div>

