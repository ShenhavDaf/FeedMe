@model IEnumerable<ourProject.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<div class="topBg"></div>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Resaurant</a>
</p>

<form asp-controller="Restaurants" asp-action="Index" method="get">
    <div class="searchBar">
        <p>
            <b>Restaurant Name:</b>  <input type="text" placeholder="Restaurant" name="SearchString" />
            <input type="submit" value="Ok" />
        </p>
    </div>

</form>

<div id="restaurantBody">
    <div class="container">
        <div class="row">

            @foreach (var restaurant in Model)
            {
                <button id="restaurantBtn">
                    <div class="card text-center">
                        <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@restaurant.ID">
                            <img src="@restaurant.RestaurantImage" class="itemCard">
                            @if (restaurant.RestaurantImage == null)
                            {
                                <img src="~/Photos/notFind.png" class="itemCard">
                            }
                        </a>
                        <div class="card-body">
                            <h5 class="text-center">@restaurant.Name</h5>
                            <p class="text-left"><b><u>About Us:</u></b>    @restaurant.Description</p>
                            <p class="text-right">
                                <b><u>Rate:</u></b>    @restaurant.Rate
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                </svg>
                            </p>
                            <tr>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@restaurant.ID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@restaurant.ID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@restaurant.ID">Delete</a>
                                </td>
                            </tr>

                        </div>
                    </div>
                </button>
            }
        </div>
    </div>
</div>